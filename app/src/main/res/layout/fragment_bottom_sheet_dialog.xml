<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@drawable/bg_bottom_sheet_handle"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_kadar"
            android:textSize="20sp"
            android:textColor="@color/green_20"
            android:fontFamily="@font/sf_bold"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <View
            android:id="@+id/dot_tinggi"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/selector_filter_dot"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/high"
            android:fontFamily="@font/sf_medium"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/layout_rendah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <View
            android:id="@+id/dot_rendah"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/selector_filter_dot"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/low"
            android:fontFamily="@font/sf_medium"
            android:textSize="16sp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Reset"
                android:textSize="16sp"
                android:fontFamily="@font/sf_bold"
                android:textColor="@color/green_30"
                android:background="@drawable/bg_stroke_rounded20"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/btn_terapkan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/apply"
                android:textSize="16sp"
                android:fontFamily="@font/sf_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_green_background"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>