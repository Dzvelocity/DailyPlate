<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wave_bg"
        app:layout_constraintBottom_toTopOf="@id/tv_nutrisi"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_filterai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resep_ai"
        android:fontFamily="@font/sf_bold"
        android:textColor="@color/green_20"
        android:textSize="28sp"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_filterai"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/filter_kadar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:drawableEnd="@drawable/arrow_down_filter"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/kadar"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 1"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 2"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 3"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 4"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 5"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 6"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 7"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 8"
                android:textColor="@color/green_30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/filter_item_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_stroke_rounded"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Filter 9"
                android:textColor="@color/green_30"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_nutrisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semua Resep"
        android:fontFamily="@font/sf_bold"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/green_20"
        app:layout_constraintTop_toBottomOf="@id/horizontal_scroll_filters"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- RecyclerView untuk Resep -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_mymenu2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nutrisi"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Tambahkan di bawah RecyclerView -->
    <TextView
        android:id="@+id/tv_no_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil filter tidak ada yang relevan"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/green_30"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_nutrisi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
