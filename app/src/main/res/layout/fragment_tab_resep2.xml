<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabResepFragment2">

    <ImageView
        android:id="@+id/empty_resepbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/myresep_img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/empty_titleresep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/belum_ada_resep_yang_diunggah"
        android:fontFamily="@font/sf_medium"
        android:textSize="19sp"
        android:textColor="@color/green_20"
        android:textAlignment="center"
        android:layout_marginTop="300dp"/>

    <TextView
        android:id="@+id/empty_titleresep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yuk_buat_kumpulan_resepmu_sendiri"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/green_sec20"
        android:textAlignment="center"
        android:layout_marginTop="335dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/extend_resep"
        android:contentDescription="@string/tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CBAA4"
        android:src="@drawable/add_ic"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CBAA4"
        android:src="@drawable/info_ic"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fab_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips"
        android:fontFamily="@font/sf_regular"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:background="@drawable/label_background"
        android:padding="6dp"
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_gravity="bottom|end"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CBAA4"
        android:src="@drawable/ic_recipe"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fab_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buat_resep"
        android:fontFamily="@font/sf_regular"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:background="@drawable/label_background"
        android:padding="6dp"
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_gravity="bottom|end"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CBAA4"
        android:src="@drawable/ic_like_white"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fab_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liked_recipes"
        android:fontFamily="@font/sf_regular"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:background="@drawable/label_background"
        android:padding="6dp"
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_gravity="bottom|end"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_mymenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

</FrameLayout>
