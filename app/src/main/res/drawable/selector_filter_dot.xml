<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State selected -->
    <item android:state_selected="true">
        <layer-list>
            <!-- Lingkaran terluar sebagai cincin -->
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/green_40" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <!-- Lingkaran kecil di tengah -->
            <item
                android:width="10dp"
                android:height="10dp"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/green_40" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- State default -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="@color/green_40" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
